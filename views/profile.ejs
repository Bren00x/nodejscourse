<% layout('layout') -%>
<% block('topbar', 
	'<div id="rightside">\
		<a id="user" href="/users/'+user.username+'">\
			<img id="userpic" src="'+user.image+'"/>\
			<span id="username">'+user.username+'</span>\
		</a>\
		<a href="/logout" id="logout">Logout</a>\
	</div>'
) -%>

<h1><%= user.username %></h1>
<img src="<%= user.image %>">

<aside class="centerme">
    <form method="POST" action="/updateBio/<%= user._id %>">
		<textarea style="bio" name="bio"><%= user.bio %></textarea>
		<input type="submit" value="Update">
	</form>
</aside>